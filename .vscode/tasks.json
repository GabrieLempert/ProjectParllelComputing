{
    "tasks": [
        {
            "type": "shell",
            "label": "mpicc build active file",
            "command": "/opt/homebrew/Cellar/open-mpi/4.1.5/bin/mpicc",
            "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": {
              "kind": "build",
              "isDefault": true
            }
          }
    ],
    "version": "2.0.0"
}
